{
  "name": "@observablehq/parser",
  "version": "1.0.1",
  "license": "ISC",
  "main": "dist/parser.js",
  "module": "src/index.js",
  "author": {
    "name": "Observable, Inc.",
    "url": "https://observablehq.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/observablehq/parser.git"
  },
  "scripts": {
